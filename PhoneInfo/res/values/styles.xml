<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="default_base_theme" parent="android:Theme.Holo" />

    <style name="default_theme" parent="default_base_theme" />

    <style name="container">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="textView">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/textColorDefault</item>
    </style>

    <style name="textView.Cap">
        <item name="android:textAllCaps" tools:targetApi="14">true</item>
    </style>

    <style name="textView.Big">
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>

    <style name="textView.Big.Cap">
        <item name="android:textAllCaps" tools:targetApi="14">true</item>
    </style>

    <style name="textView.Bigger">
        <item name="android:textSize">@dimen/textSizeBigger</item>
    </style>

    <style name="textView.Bigger.Cap">
        <item name="android:textAllCaps" tools:targetApi="14">true</item>
    </style>

    <style name="dynamic">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_dynamic_side</item>
        <item name="android:layout_marginRight">@dimen/margin_dynamic_side</item>
    </style>

    <style name="dynamic.header">
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>

    <style name="button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:width">@dimen/button_width</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/screen_description_font_size</item>
    </style>

    <style name="CheckboxTextStyle">

        <!--
        Apply on API 17 
        <item name="android:textAlignment">textEnd</item>
        -->

        <item name="android:gravity">center_vertical|right</item>
    </style>

</resources>