<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight" tools:ignore="PxUsage">1px</item>
    </style>

    <style name="textView">
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="textView.Cap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textView.Big">
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>

    <style name="textView.Big.Cap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textView.Bigger">
        <item name="android:textSize">@dimen/textSizeBigger</item>
    </style>

    <style name="textView.Bigger.Cap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textView.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="textView.Small.Cap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textView.Smaller">
        <item name="android:textSize">@dimen/textSizeSmaller</item>
    </style>

    <style name="textView.Smaller.Cap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="default_base_theme" parent="android:Theme.Holo" />

    <style name="default_theme" parent="default_base_theme" />

    <style name="container">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
    </style>

</resources>